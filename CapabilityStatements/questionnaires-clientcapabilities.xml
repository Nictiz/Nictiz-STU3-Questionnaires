<?xml-model href="http://hl7.org/fhir/STU3/capabilitystatement.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<CapabilityStatement xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://hl7.org/fhir http://hl7.org/fhir/STU3/fhir-all.xsd" xmlns="http://hl7.org/fhir">
    <url value="http://nictiz.nl/fhir/CapabilityStatement/questionnaires-clientcapabilities"/>
    <name value="QuestionnaireClient"/>
    <status value="draft"/>
    <date value="2020-02-19"/>
    <publisher value="Nictiz"/>
    <contact>
        <name value="Nictiz"/>
        <telecom>
            <system value="email"/>
            <value value="info@nictiz.nl"/>
            <use value="work"/>
        </telecom>
    </contact>
    <description value="This CapabilityStatement describes the minimal requirements for a client to retrieve and update questionnaire reference tasks, retrieve questionnaires, and to post questionnaire responses."/>
    <copyright value="CC0"/>
    <kind value="requirements"/>
    <fhirVersion value="3.0.1"/>
    <acceptUnknown value="both"/>
    <format value="xml"/>
    <format value="json"/>
    <rest>
        <mode value="client"/>
        <resource>
            <type value="Task"/>
            <profile>
                <reference value="http://nictiz.nl/fhir/StructureDefinition/Questionnaires-Task"/>
                <display value="Questionnaires-Task"/>
            </profile>
            <interaction>
                <code value="read"/>
            </interaction>
            <interaction>
                <code value="update"/>
            </interaction>
            <interaction>
                <code value="search-type"/>
            </interaction>
            <searchInclude value="Organization"/>
            <searchInclude value="Patient"/>
            <searchInclude value="PractitionerRole"/>
            <searchInclude value="Practitioner"/>
            <searchParam>
                <name value="code"/>
                <type value="token"/>
            </searchParam>
        </resource>
        <resource>
            <type value="Questionnaire"/>
            <profile>
                <reference value="http://nictiz.nl/fhir/StructureDefinition/nl-core-questionnaire"/>
                <display value="nl-core-questionnaire"/>
            </profile>
            <interaction>
                <code value="read"/>
            </interaction>
        </resource>
        <resource>
            <type value="QuestionnaireResponse"/>
            <profile>
                <reference value="http://nictiz.nl/fhir/StructureDefinition/nl-core-questionnaireresponse"/>
                <display value="nl-core-questionnaireresponse"/>
            </profile>
            <interaction>
                <code value="create"/>
            </interaction>
        </resource>
        <resource>
            <type value="Patient"/>
            <profile>
                <reference value="http://fhir.nl/fhir/StructureDefinition/nl-core-patient"/>
                <display value="nl-core-patient"/>
            </profile>
            <interaction>
                <code value="read"/>
            </interaction>
        </resource>
        <resource>
            <type value="Practitioner"/>
            <profile>
                <reference value="http://fhir.nl/fhir/StructureDefinition/nl-core-practitioner"/>
                <display value="nl-core-practitioner"/>
            </profile>
            <interaction>
                <code value="read"/>
            </interaction>
        </resource>
        <resource>
            <type value="PractitionerRole"/>
            <profile>
                <reference value="http://fhir.nl/fhir/StructureDefinition/nl-core-practitionerrole"/>
                <display value="nl-core-practitionerrole"/>
            </profile>
            <interaction>
                <code value="read"/>
            </interaction>
        </resource>
        <resource>
            <type value="Organization"/>
            <profile>
                <reference value="http://fhir.nl/fhir/StructureDefinition/nl-core-organization"/>
                <display value="nl-core-organization"/>
            </profile>
            <interaction>
                <code value="read"/>
            </interaction>
        </resource>
    </rest>
</CapabilityStatement>
